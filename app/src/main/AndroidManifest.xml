<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suatkkrer.taboo_android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TabooAndroid">
        <activity android:name=".Activities.ResultActivity"></activity>
        <activity android:name=".Activities.TabooActivity" />
        <activity android:name=".Activities.MyWordsActivity" />
        <activity android:name=".Activities.AddWordsActivity" />
        <activity android:name=".Activities.AboutGameActivity" />
        <activity android:name=".Activities.SettingsActivity" />
        <activity android:name=".Activities.DrawGameActivity" />
        <activity android:name=".Activities.TeamActivity" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>